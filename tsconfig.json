{
  "compilerOptions": {
    "types": [],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "strictPropertyInitialization": false,
    "plugins": [],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "worker-configuration.d.ts",
    "tailwind.config.ts",
    "eslint.config.js",
    "prettier.config.js",
  ],
  "exclude": [
    "node_modules",
    "workers"
  ]
}